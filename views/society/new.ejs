<% layout('layouts/main')%>
<div class="col-6 offset-3">
    <h3>Create New Society</h3>
    <form action="/society/new" method="post" class="validate-form" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title:</label>
            <input class="form-control" type="text" id="title" name="society[title]" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Enter Description: </label><br>
            <textarea id="description" name="society[description]" rows="5" cols="50" required></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
        </div>
        <div class="mb-3">
            <div class="form-file custom-file">
                <input type="file" class="form-file-input" id="image" name="image" multiple>
                <label class="form-file-label" for="image">
                    <span class="form-file-text custom-file-label">Choose image(s)...</span>
                </label>
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Add Society</button>
        </div>
    </form>
</div>